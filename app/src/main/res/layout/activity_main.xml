<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="@dimen/standard_margin"
        android:id="@+id/textview_choose_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="@string/choose_a_color" />

    <Spinner
        android:layout_marginTop="@dimen/standard_margin"
        android:id="@+id/spinner_colours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/colours">
    </Spinner>

    <Button
        android:layout_marginRight="@dimen/standard_padding"
        android:layout_marginLeft="@dimen/standard_padding"
        android:layout_marginTop="@dimen/standard_margin"
        android:id="@+id/show_description_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_description_button"/>
    <TextView
        android:layout_marginTop="@dimen/standard_margin"
        android:id="@+id/textview_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_dummy_text"/>

</LinearLayout>
